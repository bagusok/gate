{
	"name": "paid-endpoint",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "turbo run dev",
		"dev:web": "turbo run dev --filter=@gate/web",
		"dev:api": "turbo run dev --filter=@gate/api",
		"build": "turbo run build",
		"db:generate": "turbo run db:generate --filter=@gate/database",
		"db:migrate": "turbo run db:migrate --filter=@gate/database",
		"db:push": "turbo run db:push --filter=@gate/database",
		"db:studio": "turbo run db:studio --filter=@gate/database",
		"db:seed": "bun run --cwd packages/database src/seeds/index.ts",
		"auth:generate": "bun run --cwd packages/auth auth:generate",
		"prepare": "husky",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write ."
	},
	"lint-staged": {
		"*.{js,ts,jsx,tsx,json,css,md}": [
			"biome check --write --no-errors-on-unmatched"
		]
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@types/bun": "latest",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"turbo": "^2.5.4",
		"typescript": "^5.8.3"
	},
	"packageManager": "bun@1.3.6",
	"dependencies": {
		"tsx": "^4.21.0"
	}
}
